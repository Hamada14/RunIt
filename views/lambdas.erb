
<link rel="stylesheet" href="css/lambda.css" />

<div class="container-fluid">
  <div class="row">
    <div class="col-4">
    </div>

    <div class="col-6">

      <form class="lambda-create-form" action='/create_lambda' method='post'>
        <div class="col-5">
          <div class="form-group">
            <label for="lambdaName">Lambda Name</label>
            <input type="" class="form-control" name="lambdaName" placeholder="Enter lambda name"
              pattern="[a-zA-Z][a-zA-Z0-9]{7,20}" required title="8 to 21 alphanumeric name starting with a letter">
          </div>
        </div>

        <div class="form-group">
          <div class="col-5">
            <label for="lambdaCode">Lambda Code</label>
          </div>

          <div class="col-10">
            <textarea class="form-control" name="lambdaCode" rows="10" cols="50" required></textarea>
          </div>
        </div>

        <button type="submit" class="btn btn-primary" style="margin-left:30%">Create Lambda</button>
      </form>

    </div>
  </div>
</div>
